<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:id="@+id/container"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="edu.andrews.cptr475.bernardm.andrewsapp.Tourinfo.AboutUs"
             tools:ignore="MergeRootFrame">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Statement of Mission"
        android:id="@+id/textView2"
        android:layout_gravity="left|top"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Seek Knowledge as they...  Engage in intellectual discovery and inquiry Demonstrate the ability to think clearly and critically Communicate effectively Understand life, learning, and civic responsibility from a Christian point of view Demonstrate competence in their chosen disciplines and professions"
        android:id="@+id/textView3"
        android:layout_gravity="center"/>
</FrameLayout>
